{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "include": ["src/**/*.ts", "test/**/*.ts", "build.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__fixtures__/**/*"
  ]
}
