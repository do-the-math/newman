{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "alwaysStrict": true
  },
  "typeRoots": ["./node_modules/@types", "./server/types"],
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],

  "emitDecoratorMetadata": true,
  "experimentalDecorators": true
}
